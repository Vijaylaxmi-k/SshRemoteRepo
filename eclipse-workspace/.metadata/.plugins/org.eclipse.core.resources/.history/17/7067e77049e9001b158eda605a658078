//example for abstraction
// reuse PF & HRA and enforce SA & DA methods

package package4;
public abstract class Salary
class MicrosoftSalary 
{
	public int PF(int basic)
	{
		return 12*basic/100;
	}
	public int HRA(int basic)
	{
		return 40*basic/100;
	}
	public int SA()
	{
	     return 30000; 	
	}
	public int DA()
	{
		return 2500;
	}
}
class cogSalary
{
	public int PF(int basic)
	{
		return 12*basic/100;
	}
	public int HRA(int basic)
	{
		return 40*basic/100;
	}
	public int SA()
	{
	     return 10000; 	
	}
	public int DA()
	{
		return 1500;
	}
	
}
class Infosys
{
	public int PF(int basic)
	{
		return 12*basic/100;
	}
	public int HRA(int basic)
	{
		return 40*basic/100;
	}
	public int SA()
	{
	     return 30000; 	
	}
	public int DA()
	{
		return 2500;
	}
}